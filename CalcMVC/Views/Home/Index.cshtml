@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Yönetici Girişi Sayfası</title>
    <link href="~/Content/Style/LoginStyle.css" rel="stylesheet" />
</head>
<body style="background-color:black">
    <form action="/Home/Index" method="post">
        <div class="login-box">
            <h1>Girişi</h1>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Yönetici Adı" name="Name">
            </div>
            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Şifre" name="Password">
            </div>
            <input type="submit" class="btn" value="Giriş Yap">
        </div>
    </form>
</body>
</html>